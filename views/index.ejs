<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header">Blog App</div>
    <div class="ui top  attached segment">
        <div class="ui divided items">
            <% for(var i=0;i<blogs.length;i++){ %>
                <div class="item">
                    <div class="image">
                        <% if (blogs[i].image == '' ) { %>
                             <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSsSgARvxhFN7U5745ZlRbBiW1r1IMLsGVJp9LhrmbcAyknXpMkAw"/>
                                     <% } else { %>
                               <img src="<%= blogs[i].image %>"/>
                            <% } %>
                    </div>
                    <div class="content">
                         <a class="header" href="/blogs/<%= blogs[i]._id %>"><%=blogs[i].title%></a>
                         <div class="meta">
                             <span><%= blogs[i].created.toDateString() %></span>
                         </div>
                         <div class="description">
                             <% if (typeof blogs[i].body == 'undefined' ) { %>
                                 <p> no content</p>  
                                     <% } else { %>
                               <p> <%= blogs[i].body.substring(0, 100) %>...</p>  
                            <% } %>
                         </div>
                         <div class="extra">
                             <a class="ui floated basic violet button" href="/blogs/<%= blogs[i]._id %>">
                                 Read More
                                 <i class="right chevron icon"></i>
                             </a>
                         </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<% include partials/footer %>
